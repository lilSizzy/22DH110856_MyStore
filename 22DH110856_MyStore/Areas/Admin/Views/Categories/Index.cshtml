@model IEnumerable<_22DH110856_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success" >Danh Sách Danh Mục Sản Phẩm</h2>


<table class="table bg-info col-lg-8 col-md-6 col-sm-3">
    <tr >
        <th class="bg-success col-lg-5 col-md-4 col-sm-2">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            Tên Danh Mục
        </th>
        <th class="bg-success col-lg-3 col-md-2 col-sm-1"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập Nhật", "Edit", new { id=item.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.CategoryID }) |*@
            @Html.ActionLink("Xoá", "Delete", new { id=item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>
